{
  "name": "kindergarten",
  "author": "Jiri Chara <me@jirichara.com>",
  "license": "MIT",
  "version": "0.1.2",
  "description": "Kindergarten is a JavaScript library which helps programmers to achieve modular security using sandbox pattern",
  "main": "dist/kindergarten.js",
  "scripts": {
    "test": "npm run lint && npm run karma",
    "testAsync": "./node_modules/.bin/parallelshell 'npm run lint' 'npm run karma'",
    "build": "./node_modules/.bin/browserify lib/kindergarten.js -t [ babelify --presets [es2015] ] --standalone Kindergarten --outfile dist/kindergarten.js",
    "lint": "./node_modules/.bin/eslint lib spec",
    "karma": "./node_modules/.bin/karma start",
    "uglify": "./node_modules/.bin/uglifyjs dist/kindergarten.js -o dist/kindergarten.min.js",
    "watch:js:build": "./node_modules/.bin/watch 'npm run build' lib",
    "watch:js:uglify": "./node_modules/.bin/watch 'npm run uglify' lib",
    "watch:js:test": "./node_modules/.bin/watch 'npm run testAsync' lib spec",
    "watch": "./node_modules/.bin/parallelshell 'npm run watch:js:build' 'npm run watch:js:uglify' 'npm run watch:js:test'"
  },
  "keywords": [
    "kindergarten",
    "sandbox",
    "modularity",
    "security",
    "authorization"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/JiriChara/kindergarten.git"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0-beta6",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-istanbul": "^0.2.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.1.1",
    "jasmine": "^2.3.2",
    "karma": "^0.13.15",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-browserify": "^4.4.1",
    "karma-coverage": "^0.5.3",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-story-reporter": "^0.3.1",
    "lodash": "^3.10.1",
    "parallelshell": "^2.0.0",
    "phantomjs": "^1.9.19",
    "uglify-js": "^2.6.1",
    "watch": "^0.17.1"
  },
  "dependencies": {
    "hookies": "^1.0.7"
  }
}
